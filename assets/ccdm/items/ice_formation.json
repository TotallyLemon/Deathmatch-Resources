{
  "model": {
    "type": "composite",
    "models": [
      {
        "type": "minecraft:model",
        "model": "ccdm:item/ice_formation"
      },
      {
        "type": "select",
        "property": "custom_model_data",
        "fallback": {
          "type": "empty"
        },
        "cases": [
          {
            "model": {
              "type": "model",
              "model": "ccdm:item/ice_formation_pattern/wall"
            },
            "when": "wall"
          },
          {
            "model": {
              "type": "model",
              "model": "ccdm:item/ice_formation_pattern/pillar"
            },
            "when": "pillar"
          },
          {
            "model": {
              "type": "model",
              "model": "ccdm:item/ice_formation_pattern/cube"
            },
            "when": "cube"
          }
        ]
      }
    ]
  }
}
